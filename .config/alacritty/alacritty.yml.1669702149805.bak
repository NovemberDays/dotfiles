window:
  decorations: none
env:
  TERM: xterm-256color
colors:
  # Default colors
  primary:
    background: '#181818'
    foreground: '#d8d8d8'

  # Colors the cursor will use if `custom_cursor_colors` is true
  cursor:
    text: '#d8d8d8'
    cursor: '#d8d8d8'

  # Normal colors
  normal:
    black: '#181818'
    red: '#ab4642'
    green: '#a1b56c'
    yellow: '#f7ca88'
    blue: '#7cafc2'
    magenta: '#ba8baf'
    cyan: '#86c1b9'
    white: '#d8d8d8'

  # Bright colors
  bright:
    black: '#585858'
    red: '#ab4642'
    green: '#a1b56c'
    yellow: '#f7ca88'
    blue: '#7cafc2'
    magenta: '#ba8baf'
    cyan: '#86c1b9'
    white: '#f8f8f8'
theme: Base16-Default-Dark

font:
  normal:
    family: Ubuntu Mono Nerd Font
    style: Medium
  bold:
    family: Ubuntu Mono Nerd Font
    style: Bold
  italic:
    family: Ubuntu Mono Nerd Font
    style: MediumItalic
  bold_italic:
    family: Ubuntu Mono Nerd Font
    style: BoldItalic
  size: 18
draw_bold_text_with_bright_colors: true

key_bindings:
  - { key: F11, action: ToggleFullscreen }
